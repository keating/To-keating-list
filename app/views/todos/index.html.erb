<% @todos.each do |todo| %>
    <div class="panel panel-default new-todo" data-title="<%= todo.title %>" data-remark="<%= todo.remark %>">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= todo.title %>
        </h3>
      </div>
      <div class="panel-body">
        <%= todo.remark %>
      </div>
    </div>
<% end %>

<div class="list-group" id="finished_todos">
  <a href="#" class="list-group-item active" style="border-radius: 0;">
    <h4 class="list-group-item-heading">Recent Finished Todos</h4>
    <p class="list-group-item-text">
      Drag a todo here to finish it
    </p>
  </a>
</div>